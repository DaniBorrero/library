<p id="notice"><%= notice %></p>

<h1 class="container">Mi lista de libros</h1>

<table class="table-bordered table-dark">
  <thead class="text-center" >
    <tr>    
        <th>Titulo</th>
        <th>Autor</th>
        <th>Fecha de regreso</th>
        <th>Fecha cuando lo preste</th>
        <th>Coment</th>
        <th>Status</th>
        <th colspan="3"></th>      
    </tr>
  </thead>

  <tbody class="text-center">
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.date_in %></td>
        <td><%= book.date_out %></td>
        <td><%= book.coment %></td>
        <td><%= book.status %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<button type="button" class="btn btn-primary my-5"><%= link_to 'Agregar libro', new_book_path %></button>


<%= search_form_for @q do |f| %>
  <div class="mr-5 pr-5">
  <h5><%= f.label :status_eq, "Filtrar por:" %></h5>
  <%= f.select :status_eq, options_for_select(Book.statuses , @q.status_eq), {},{class: "form-control"} %>
  <br>
  <button class="btn btn-primary" type="submit">Buscar</button>
<% end %>
</div>


